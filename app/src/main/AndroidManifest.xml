<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hesheng1024.happystudy">

    <application
        android:name=".HappyStudyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="design_width_in_dp"
            android:value="411" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="823" />

        <activity
            android:name=".modules.home.v.HomeActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TestActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name=".modules.programme.v.impl.ProgrammeActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name=".modules.study.v.impl.StudyGuideActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="LockedOrientationActivity" />

        <activity
            android:name=".modules.programme.v.impl.IntroduceActivity"
            android:screenOrientation="sensorLandscape"
            tools:ignore="LockedOrientationActivity" />

    </application>
</manifest>
