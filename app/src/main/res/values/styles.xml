<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CommonTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BlockTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/block_text_sp12</item>
        <item name="singleLine">true</item>
    </style>

    <style name="BlockEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/block_text_sp12</item>
        <item name="android:inputType">numberSigned|number|numberDecimal</item>
        <item name="android:gravity">center</item>
        <item name="singleLine">true</item>
        <item name="android:minEms">2</item>
        <item name="background">@drawable/bg_et_circle_white</item>
    </style>

</resources>
